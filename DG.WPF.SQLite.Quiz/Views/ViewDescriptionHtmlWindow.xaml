<Window x:Class="DG.WPF.SQLite.Quiz.Views.ViewDescriptionHtmlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ViewDescriptionHtmlWindow" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="1" x:Name="borderDescriptionHtml" BorderBrush="Black"  BorderThickness="1" Padding="2" Margin="2" CornerRadius="5">
                <WebBrowser MinWidth="200" MinHeight="50" x:Name="wbDescriptionHtml" />
        </Border>        
    </Grid>
</Window>

